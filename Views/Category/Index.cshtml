@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
@if (TempData["success"] != null)
{
    <h2>@TempData["success"]</h2>
}

<div class="container p-3" style="margin-bottom:25px">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2> 
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle-fill"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Category Name</th>
            <th>Display Order</th>
            <th>Date time</th>
             <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.DisplayOrder</td>
                <td>@category.CreatedDateTime</td>
                <td>
                   <a class = "btn btn-primary mx-5" style = "width:50%" asp-controller="Category" asp-action="Edit" asp-route-id = "@category.Id">
                       <i class="bi bi-pencil-square"></i> Edit</a> 
                      <a class = "btn btn-danger" style = "width:100% inline" asp-controller="Category" asp-action="Delete" asp-route-id = "@category.Id">
                       <i class="bi bi-trash3"></i>  Delete</a> 
                       
                       
                  
                </td>
             
            </tr>
        }
    </tbody>


</table>

